			"required": 1,
			"formula": "doc.getFrom('Item', row.item, 'rate')"
		},
		{
			"fieldname": "amount",
			"label": "Amount",
			"fieldtype": "Currency",
			"disabled": 1,
			"formula": "row.quantity * row.rate"
